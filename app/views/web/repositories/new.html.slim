- github = ApplicationContainer[:github_helper].new(current_user)

= simple_form_for(@repository) do |f|
  = f.error_notification
  = f.error_notification message: f.object.errors[:base].to_sentence if f.object.errors[:base].present?

  = f.input :github_id, hint: false, collection: github.repo_list,
          input_html: { oninvalid: "this.setCustomValidity('#{t('.list_error')}')", oninput: "setCustomValidity('')" }
  = f.button :submit, class: 'btn btn-success'
